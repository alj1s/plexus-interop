{
  "name": "@plexus-interop/common",
  "version": "0.1.0",
  "types": "dist/main/src/index.d.ts",
  "main": "dist/main/src/index.js",
  "description": "Common functionality for Plexus Interop Web",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "yarn lint && trash dist",
    "build": "yarn build:main",
    "postbuild": "yarn test",
    "build:main": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "lint": "tslint src/**/*.ts",
    "unit": "jest --coverage",
    "test": "yarn unit"
  },
  "dependencies": {
    "@types/loglevel": "^1.4.29",
    "@types/long": "^3.0.31",
    "core-js": "^2.5.3",
    "loglevel": "^1.4.1",
    "loglevel-plugin-prefix": "^0.5.3",
    "long": "^3.2.0",
    "reflect-metadata": "^0.1.10",
    "tslib": "^1.6.0",
    "typescript-collections": "1.2.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.2",
    "@types/jest": "^22.0.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.5",
    "chai": "^4.1.0",
    "jest": "23.1.0",
    "karma": "^1.7.0",
    "path": "^0.12.7",
    "sinon": "^2.4.1",
    "trash": "^4.1.0",
    "trash-cli": "^1.4.0",
    "ts-mockito": "2.0.2",
    "tslint": "5.8.0",
    "typescript": "2.6.1",
    "yarn": "1.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jasmine.js",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": ".+/dist/main/tests/.+spec.js$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "dist/main/src/**/*.js",
      "!dist/main/src/gen/**/*.js",
      "!src/*.d.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
