{
  "name": "@plexus-interop/websocket-transport",
  "types": "dist/main/src/index.d.ts",
  "description": "Web Socket based Transport for Plexus Web Interop",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "scripts": {
    "prebuild": "yarn lint && trash dist",
    "build": "yarn build:main",
    "postbuild": "yarn test",
    "build:main": "tsc -p tsconfig.json",
    "lint": "tslint src/**/*.ts",
    "unit": "jest --coverage",
    "pretest": "yarn lint",
    "test": "yarn unit"
  },
  "dependencies": {
    "long": "^3.2.0",
    "@plexus-interop/transport-common": "0.1.0",
    "protobufjs": "6.8.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.2",
    "tslib": "^1.7.1"
  },
  "peerDependencies": {
    "@plexus-interop/transport-common": "0.1.0",
    "protobufjs": "6.8.0",
    "rxjs": "^5.4.2"
  },
  "main": "dist/main/src/index.js",
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/long": "^3.0.31",
    "@types/node": "^7.0.5",
    "babel-register": "^6.23.0",
    "find-port": "^2.0.1",
    "jasmine-reporters": "^2.2.0",
    "jest": "23.1.0",
    "mock-socket": "^7.0.0",
    "trash-cli": "^1.4.0",
    "tslint": "5.8.0",
    "typescript": "2.6.1",
    "yarn": "1.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jasmine.js",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": ".+/dist/main/tests/.+.spec.js$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "dist/main/src/**/*.js",
      "!src/*.d.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
